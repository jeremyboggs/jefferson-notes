<h1>Results</h1>

<%= form_tag("/search/results", method: "get")  do  %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q, params[:q]) %>
  <%= submit_tag("Search") %>
<% end %>

<p>
  You searched for <strong><%= params[:q] %></strong>
and we found <%= pluralize(@response["response"]["numFound"], 'match') %>.
</p>

 <% @response["response"]["docs"].each do |doc| %>
   <p><%= link_to(doc["title"], controller: "milestones", action: "show", id: doc["slug"]) %></p>
<% end %>
