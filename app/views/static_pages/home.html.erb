<h1>StaticPages#home</h1>
<p>Find me in app/views/static_pages/home.html.erb</p>

<div class="citation">
  <p><%= @witness.citation.html_safe %></p>
</div>

<div class="pages">
  <% @pages.each do |page| %>
    <% image = page.images.first %>
    <% unless image.nil? %>
      <div class="image-blog">
        <%= link_to image_tag(fedora_thumb(image.pid)), witness_page_path(@witness, page) %>
      </div>
    <% end %>
  <% end %>
</div>

