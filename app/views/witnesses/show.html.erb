<p id="notice"><%= notice %></p>

<div class="citation">
  <p>
    <%= @witness.citation.html_safe %>
  </p>
</div>

<div class="pages">
  <% @witness.pages.each do |page| %>
    <div class="image-block">
      <% image = page.images.first %>
      <% unless image.nil? %>
        <%= link_to image_tag(fedora_url(image.pid, 200, 300)), witness_page_path(@witness, page) %>
      <% end %>
    </div>
  <% end %>
</div>

