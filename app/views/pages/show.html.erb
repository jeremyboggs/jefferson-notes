<div class="transcription">
  <div class="page_number"><%= @page.slug.titleize %></div>
  <%= @page.content.html_safe %>
</div>

<div class="thumbnails">
    <% @page.images.each do |image| %>
    <div class="thumbnail">
    <%= link_to(image_tag(fedora_squarethumb(image.pid)), fedora_url(image.pid, 1200, 1200)) %>
    <p><%= image.witness.location %>, <%= image.witness.year %></p>
    </div>
<% end %>
</div>

<div class="pagination">
  <%= link_to "Previous", [@page.prev.witness, @page.prev], class: "previous" unless @page.prev.nil? %>
  <%= link_to "Next", [@page.next.witness, @page.next], class: "next" unless @page.next.nil? %>
</div>
